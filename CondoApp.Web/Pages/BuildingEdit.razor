@page "/EditBuilding"
@page "/EditBuilding/{Id}"
@inherits BuildingEditBase

<div class="row">
    <div class="col-md-12">
        <h1>Details for @NewBuilding.Name</h1>
    </div>
    <DataAnnotationsValidator />
    <ValidationSummary></ValidationSummary>
    <br />

    <EditForm Model="@NewBuilding" OnValidSubmit="@HandleValidRequest" OnInvalidSubmit="HandleInvalidRequest">
        <div class="form-group">
            <label class="col-md-3">Name</label>
            <InputText class="col-md-8" @bind-Value="@NewBuilding.Name" id="Name"></InputText>
        </div>
        <div class="form-group">
            <label class="col-md-3">Description</label>
            <InputTextArea class="offset-md-1 col-md-8" @bind-Value="@NewBuilding.Description" id="Description"></InputTextArea>
        </div>
        <div class="form-group">
            <label class="col-md-3">Photo Url</label>
            <InputTextArea class="offset-md-1 col-md-8" @bind-Value="@NewBuilding.PictureURL" id="PhotoURL"></InputTextArea>
        </div>
        <div class="form-group">
            <label class="col-md-3">Country</label>
            <InputTextArea class="offset-md-1 col-md-8" @bind-Value="@NewBuilding.Country" id="Country"></InputTextArea>
        </div>
        <div class="form-group">
            <label class="col-md-3">City</label>
            <InputTextArea class="offset-md-1 col-md-8" @bind-Value="@NewBuilding.City" id="City"></InputTextArea>
        </div>
        <div class="form-group">
            <label class="col-md-3">Address</label>
            <InputTextArea class="offset-md-1 col-md-8" @bind-Value="@NewBuilding.Address" id="Address"></InputTextArea>
        </div>
        <div class="form-group">
            <label class="col-md-3">Number of Floors</label>
            <InputNumber class="offset-md-1 col-md-8" @bind-Value="@NewBuilding.NumOfFloors" id="NumOfFloors"></InputNumber>
        </div>
        <div class="form-group">
            <label class="col-md-3">Number of Flats</label>
            <InputNumber class="offset-md-1 col-md-8" @bind-Value="@NewBuilding.NumOfFlats" id="NumOfFlats"></InputNumber>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-warning">Save Building</button>
            <a @onclick="@GoToOverview" class="btn btn-primary">Back</a>
            @if(!String.IsNullOrEmpty(Id))
            {
                <a @onclick="@DeleteBuilding" class="btn btn-danger">Delete Building</a>
            }
        </div>

        <label>@Message</label>
    </EditForm>

    
</div>