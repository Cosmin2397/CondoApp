@page "/EditBuilding"
@page "/EditBuilding/{Id}"
@inherits BuildingEditBase

<div class="row">
    <div class="col-md-8 offset-2">
    <h5 style="text-align:center">Create new Building</h5>
    </div>
    <DataAnnotationsValidator />
    <ValidationSummary></ValidationSummary>
    <div class="form-group row">
            <div class="col-md-8 offset-2"> 
    <EditForm Model="@NewBuilding" OnValidSubmit="@HandleValidRequest" OnInvalidSubmit="HandleInvalidRequest">
        <div class="form-group row" style="padding-top:10px;">
            <label class="col-md-2 col-form-label">Name</label>
            <div class="col-md-10">
            <InputText class="form-control" @bind-Value="@NewBuilding.Name" id="Name"></InputText>
            </div>
        </div>
        <div class="form-group row" style="padding-top:10px;">
            <label class="col-md-2 col-form-label">Description</label>
            <div class="col-md-10">
            <InputTextArea class="form-control" @bind-Value="@NewBuilding.Description" id="Description"></InputTextArea>
            </div>
        </div>
        <div class="form-group row" style="padding-top:10px;">
            <label class="col-md-2 col-form-label">Photo Url</label>
            <div class="col-md-10">
            <InputTextArea class=" form-control" @bind-Value="@NewBuilding.PictureURL" id="PhotoURL"></InputTextArea>
            </div>
        </div>
        <div class="form-group row" style="padding-top:10px;">
            <label class="col-md-2 col-form-label">Country</label>
            <div class="col-md-10">
            <InputTextArea class="form-control" @bind-Value="@NewBuilding.Country" id="Country"></InputTextArea>
            </div>
        </div> 
        <div class="form-group row" style="padding-top:10px;">
            <label class="col-md-2 col-form-label">City</label>
            <div class="col-md-10">
            <InputTextArea class="form-control" @bind-Value="@NewBuilding.City" id="City"></InputTextArea>
            </div>
        </div>
        <div class="form-group row" style="padding-top:10px;">
            <label class="col-md-2 col-form-label">Address</label>
            <div class="col-md-10">
            <InputTextArea class="form-control" @bind-Value="@NewBuilding.Address" id="Address"></InputTextArea>
            </div>
        </div>
        <div class="form-group row" style="padding-top:10px;">
            <label class="col-md-2 col-form-label">Number of Floors</label>
            <div class="col-md-10">
            <InputNumber class="form-control" @bind-Value="@NewBuilding.NumOfFloors" id="NumOfFloors"></InputNumber>
            </div>
        </div>
        <div class="form-group row" style="padding-top:10px;">
            <label class="col-md-2 col-form-label">Number of Flats</label>
            <div class="col-md-10">
            <InputNumber class="form-control" @bind-Value="@NewBuilding.NumOfFlats" id="NumOfFlats"></InputNumber>
            </div>
        </div>
        <div class="form-group" style="padding-top:10px;">
            <button type="submit" class="btn btn-warning">Save Building</button>
            <a @onclick="@GoToOverview" class="btn btn-primary">Back</a>
            @if(!String.IsNullOrEmpty(Id))
            {
                <a @onclick="@DeleteBuilding" class="btn btn-danger">Delete Building</a>
            }
        </div>

        <label>@Message</label>
    </EditForm>
    </div>
    </div>

    
</div>