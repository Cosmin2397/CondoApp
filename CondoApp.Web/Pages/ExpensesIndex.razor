@page "/expenses"
@inherits ExpensesBase

<PageTitle>Expenses
</PageTitle>
<h3>Expenses</h3>
@if(Expenses == null)
{
    <div>No expenses</div>
}
else
{
    <table class="table">
    <thead>
        <tr>
            <th> Name </th>
            <th> Description </th>
            <th> Cost </th>
            <th> Date </th>
            <th> Expense Type</th>
            <th> Flat Name</th>
            <th> Options </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var expense in Expenses)
        {
            <tr>
                <td>@expense.Name</td>
                <td>@expense.Description</td>
                <td>@expense.Cost.ToString("c")</td>
                <td>@expense.Date</td>
                <td>@expense.ExpenseType.ToString()</td>
                <td>@expense.FlatName</td>
                <td></td>
            </tr>
        }
    </tbody>
</table>
}
