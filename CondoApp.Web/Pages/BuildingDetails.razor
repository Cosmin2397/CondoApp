@page "/BuildingDetails/{Id:int}"
@inherits BuildingDetailsBase

@if (Building == null)
{
    <DisplaySpinner/>
}
else
{
    <h3 class="mb-5">Building Details</h3>
    <div class="row">
        <div class="col-md-6 mb-4">
            <img class="img-fluid" src ="@Building.PictureURL">
            <div class="col-md-6">
                <h3>@Building.Name</h3>
                <p class="mb-4">Description: @Building.Description</p>
                <p class="mb-4">City: @Building.Country, @Building.City</p>
                <p class="mb-4">Address: @Building.Address</p>
                <p class="mb-4">Floors: @Building.NumOfFloors</p>
                <p class="mb-4">Flats: @Building.NumOfFlats</p>
                <a href="@($"EditBuilding/{Building.Id}")" class="btn btn-warning">Edit</a>
            </div>
        </div>
    </div>
}
<hr />
<h3 style="align-content:center">List of Flats</h3>
@foreach(var flat in Building.FlatsOfBuilding)
        {
            <div class="col-md-3 mb-2">
            <a href="/FlatDetails/@flat.Id">
                <div class="card">
                <img class="img-thumbnail" src="@flat.PictureURL" >
                <div class="card-body">
                    <h5 class="card-title mb-3">
                        Name: @flat.Name
                    </h5>
                    <p class ="card-text">
                        Surface: @flat.Surface
                    </p>
                    <p class ="card-text">
                        Renting price: @flat.RentingPrice
                    </p>
                    @if(@flat.IsRented)
                    {
                        <p class ="card-text">Is Rented?: Yes</p>
                    }
                    else
                    {
                        <p class ="card-text">Is Rented?: No</p>
                    }
                </div>
                </div>
            </a>
            </div>
        }